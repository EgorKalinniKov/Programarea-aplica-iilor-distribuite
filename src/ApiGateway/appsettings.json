{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "expenses-route": {
        "ClusterId": "expense-service",
        "Match": {
          "Path": "/api/expenses/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/expenses/{**catch-all}"
          }
        ]
      },
      "categories-route": {
        "ClusterId": "category-service",
        "Match": {
          "Path": "/api/categories/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/categories/{**catch-all}"
          }
        ]
      },
      "statistics-route": {
        "ClusterId": "statistics-service",
        "Match": {
          "Path": "/api/statistics/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/statistics/{**catch-all}"
          }
        ]
      },
      "import-export-route": {
        "ClusterId": "import-export-service",
        "Match": {
          "Path": "/api/import-export/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/importexport/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "expense-service": {
        "Destinations": {
          "destination1": {
            "Address": "http://expense-service:8001"
          }
        }
      },
      "category-service": {
        "Destinations": {
          "destination1": {
            "Address": "http://category-service:8002"
          }
        }
      },
      "statistics-service": {
        "Destinations": {
          "destination1": {
            "Address": "http://statistics-service:8003"
          }
        }
      },
      "import-export-service": {
        "Destinations": {
          "destination1": {
            "Address": "http://import-export-service:8004"
          }
        }
      }
    }
  }
}

